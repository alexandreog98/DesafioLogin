@using Desafio.Enum
@using Desafio.Models;
@model UsuarioModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastrar";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar usuário</h1>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<form asp-controller="Login" asp-action="Cadastrar" method="post" onsubmit="senhaOK();">

    <div class="form-group">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="login" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label id="senha01" for="login" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" required class="form-control" name="senha" onchange="confereSenha();" placeholder="Digite a senha do usuário">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <div class="form-group">
        <label id="senha02" class="form-label">Confirme sua senha</label>
        <input type="password" required class="form-control" name="confirma" onchange="confereSenha();" placeholder="Digite a senha do usuário">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit"  class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Usuario" role="button">Voltar</a>

</form>